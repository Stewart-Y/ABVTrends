# ABVTrends Backend Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env files with real credentials!

# =============================================================================
# Database
# =============================================================================
DATABASE_URL=postgresql://user:password@localhost:5432/abvtrends

# =============================================================================
# Redis
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# Application Settings
# =============================================================================
DEBUG=true
ENVIRONMENT=development
SECRET_KEY=generate-a-secure-random-key-here

# =============================================================================
# API Keys (use AWS Secrets Manager in production)
# =============================================================================
OPENAI_API_KEY=sk-your-openai-key-here

# =============================================================================
# Distributor Credentials
# In production, store these in AWS Secrets Manager
# =============================================================================

# LibDib
LIBDIB_EMAIL=your-email@example.com
LIBDIB_PASSWORD=your-password
LIBDIB_ENTITY_SLUG=your-entity-slug

# Southern Glazer's (SGWS)
SGWS_EMAIL=your-email@example.com
SGWS_PASSWORD=your-password
SGWS_ACCOUNT_ID=your-account-id

# RNDC
RNDC_EMAIL=your-email@example.com
RNDC_PASSWORD=your-password
RNDC_ACCOUNT_ID=your-account-id

# SipMarket
SIPMARKET_EMAIL=your-email@example.com
SIPMARKET_PASSWORD=your-password

# Park Street
PARKSTREET_EMAIL=your-email@example.com
PARKSTREET_PASSWORD=your-password

# Breakthru Beverage
BREAKTHRU_EMAIL=your-email@example.com
BREAKTHRU_PASSWORD=your-password

# =============================================================================
# Production Scraper Settings
# =============================================================================
SCRAPER_ITEMS_PER_RUN=50
SCRAPER_CATCHUP_ITEMS_PER_RUN=100
SCRAPER_NEW_ITEMS_RATIO=0.8
SCRAPER_REFRESH_ITEMS_RATIO=0.2

# =============================================================================
# Alerting (Optional)
# =============================================================================
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx
# SENDGRID_API_KEY=your-sendgrid-key
# ALERT_EMAIL_TO=alerts@example.com
# ALERT_EMAIL_FROM=noreply@example.com
