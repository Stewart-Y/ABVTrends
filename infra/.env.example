# ABVTrends Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# Core Settings
# =============================================================================
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-secret-key-change-in-production

# =============================================================================
# Database
# =============================================================================
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/abvtrends
# For sync operations (Alembic)
DATABASE_URL_SYNC=postgresql://postgres:postgres@localhost:5432/abvtrends

# =============================================================================
# Redis
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# API Settings
# =============================================================================
API_V1_PREFIX=/api/v1
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# =============================================================================
# Scraper Settings
# =============================================================================
# Rate limiting
SCRAPER_RATE_LIMIT=2.0
SCRAPER_TIMEOUT=30000
SCRAPER_MAX_RETRIES=3

# Proxy configuration (optional)
PROXY_URL=
PROXY_USERNAME=
PROXY_PASSWORD=

# =============================================================================
# ML Settings
# =============================================================================
MODEL_RETRAIN_HOUR=3
DRIFT_THRESHOLD=0.15
FORECAST_HORIZON_DAYS=7

# Model storage
MODEL_PATH=/app/models

# =============================================================================
# External APIs (optional)
# =============================================================================
# Google Trends API
GOOGLE_TRENDS_API_KEY=

# Social media APIs
TWITTER_BEARER_TOKEN=
INSTAGRAM_ACCESS_TOKEN=

# =============================================================================
# Monitoring (optional)
# =============================================================================
SENTRY_DSN=
LOG_LEVEL=INFO

# =============================================================================
# Production Settings (Railway/Cloud)
# =============================================================================
# These are typically set by the platform
# PORT=8000
# RAILWAY_ENVIRONMENT=production
